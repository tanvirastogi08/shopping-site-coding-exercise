<div class="signup-container">
  <div class="signup-text-box">
    <h3>Signup</h3>
    <p class="signup-msg">We do not share your personal details with anyone.</p>
  </div>
  <form class="signup-form">
    <div class="input-wrapper">
      <input id="signup_firstName" class="input-field" type="text" name="firstname">
      <span class="focus-input" data-placeholder="First Name"></span>
    </div>
    <div class="input-wrapper">
      <input id="signup_lastName" class="input-field" type="text" name="lastname">
      <span class="focus-input" data-placeholder="Last Name"></span>
    </div>
    <div class="input-wrapper">
      <input id="signup_email" class="input-field" type="email" name="email">
      <span class="focus-input" data-placeholder="Email"></span>
    </div>
    <div class="input-wrapper">
      <input id="signup_pass" class="input-field" type="password" name="pass">
      <span class="focus-input" data-placeholder="Password"></span>
    </div>
    <div class="input-wrapper">
      <input id="signup_conpass" class="input-field" type="password" name="conpass">
      <span class="focus-input" data-placeholder="Confirm Password"></span>
    </div>
    <button id="signup_submit_btn" type="submit" class="btn btn-signup">Signup</button>
  </form>
</div>